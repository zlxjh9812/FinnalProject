<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserInfoDAO">
	<!-- nickNameChk-->
	<select id="nickNameCheck" resultType="userInfo">
		<![CDATA[
			select * from "UserInfo" where "nickname" = #{nickname}
		]]>
	</select>
	<!-- 회원가입(UserInfo) -->
	<insert id="insertUserInfo">
		<![CDATA[ INSERT INTO "UserInfo"("nickname","exp","level","point","UserId") 
		VALUES (#{nickname},0,0,0,#{UserId})
		]]>
	</insert>
	<!-- 유저 정보 -->
	<select id="getUserInfo" resultType="userInfo">
	<![CDATA[
		select * from "UserInfo" where "UserId" = #{UserId} 
	]]>
	</select>
	<update id="updateUserReportCount">
	<![CDATA[
		update "UserInfo" set "reportCount" = (select nvl (max("reportCount"),0) +1 from (select * from "UserInfo" where "UserId" = #{UserId})) where "UserId" = #{UserId}
		]]>
	</update>
	<update id="updateUserReportY">
	<![CDATA[
		update "UserInfo" set "report" = 'Y' where "UserId" = #{UserId}
	]]>
	</update>
	<update id="updateUserReportN">
	<![CDATA[
		update "UserInfo" set "report" = 'N' where "UserId" = #{UserId}
	]]>
	</update>
</mapper>